@model ILUMINACAO_PUBLICA.Models.LoginModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>



<head>

    <title>Login</title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/Content/login/css/base.css">
    <link rel="stylesheet" href="~/Content/login/css/skeleton.css">
    <link rel="stylesheet" href="~/Content/login/css/layout.css">

  
    
</head>



<script type="text/javascript">
    $(function () {
        $("#menu1").hide();
        $("#menu2").hide();
    });
</script>

<script type="text/javascript">
    $(function () {
        $("#rodape").hide();
    });
</script>



<div class="container">

    <div class="form-bg" style="height:336px">

        <form style="height:330px">
            <h2>Use sua conta de usário para entrar.</h2>
           @using (Html.BeginForm("Login", "Account", new { id = ViewBag.ReturnUrl }, FormMethod.Post))
{
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <p>

                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </p>
                <p>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </p>
    <p style=" margin-left:22px">
        @*
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })*@
        <input type="submit" value="Log in" />
    </p>



                <p>
                    @*@Html.ActionLink("Register", "Register") Se você nao possui uma conta.*@
                </p>
            }
        </form>
    </div>
</div>

